generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pizza {
  id    String      @id @default(cuid())
  name  String      @db.VarChar(255)
  tags  PizzaTag[]
  sizes PizzaSize[]

  @@unique([name])
}

model PizzaTag {
  id    String  @id @default(cuid())
  title String  @db.VarChar(255)
  pizza Pizza[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([title])
}

model PizzaSize {
  id    String  @id @default(cuid())
  title String  @db.VarChar(255)
  pizza Pizza[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([title])
}
